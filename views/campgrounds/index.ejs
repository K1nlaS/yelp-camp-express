<% layout("layouts/boilerplate") %>

<div class="map" id="cluster-map">

</div>

<h1 class="mt-3 mb-3">All Campgrounds</h1>

<% campgrounds.forEach(camp => { %>
<div class="card mb-3">
	<div class="row">
		<div class="col-md-4">
			<% if (camp.images.length) { %>
			<img class="img-fluid" src="<%= camp.images[0].url %>" alt="" />
			<% } else {%>
			<img class="img-fluid"
				src="https://res.cloudinary.com/dhp74p3e6/image/upload/v1659368981/YelpCamp/gdc4cjwunn7ekaoyus8f.jpg" alt="" />
			<% } %>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title"><%= camp.title %></h5>
				<p class="card-text"><%= camp.description %></p>
				<p class="card-text">
					<small class="text-muted"> <%= camp.location %> </small>
				</p>
				<a href="/campgrounds/<%= camp.id %>" class="btn btn-primary">View <%= camp.title %> </a>
			</div>
		</div>
	</div>
</div>
<% }) %>

<script>
	const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
	const campgrounds = { features: <%- JSON.stringify(campgrounds) %> };
</script>

<script src="/js/clustermap.js"></script>